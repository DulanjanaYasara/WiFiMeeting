<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginPageBackgroundColor"
    android:orientation="vertical"
    android:padding="@dimen/parent_page_padding"
    >

    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="48dp"
        app:srcCompat="@drawable/baseline_voice_chat_24"
        app:tint="?android:attr/textColorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="132dp"
        android:text="@string/startup_message"
        android:textAppearance="@style/TextAppearance.WifiMeeting.Title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/lecturer_button"
            style="@style/Widget.WifiMeeting.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/lecturer" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/student_button"
            style="@style/Widget.WifiMeeting.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/lecturer_button"
            android:layout_marginBottom="10dp"
            android:text="@string/student" />
    </RelativeLayout>
</LinearLayout>
